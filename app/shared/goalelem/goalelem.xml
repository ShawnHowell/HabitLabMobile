<FlexboxLayout direction="row" class="flex" id="goalelem">
  <Image id="icon" col="0" class="goal-icon thumb img-rounded" />
  <Label id="name" col="1" class="goal-name" />
  <FlexboxLayout flexDirection="row" class="np"  id="np" col="3">
    <Button text="-" id="minus" class="np-button" />
    <TextField id="number" keyboardType="number" text="999" class="np-text" />
    <Button text="+" id="plus" class="np-button" />
  </FlexboxLayout>
  <Label id="label" class="goal-label" />
  <Image id="infoButton" class="info" src="res://ic_info_outline" visibility="collapsed"/>
</FlexboxLayout>