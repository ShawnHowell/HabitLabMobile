<StackLayout class="sidedrawer-left" loaded="onLoaded" >
	<GridLayout rows="*,auto" columns="auto" class="sidedrawer-header" backgroundImage="~/images/flipped_background.png">
		<Image src="res://ic_inline_logo_text" class="sd-icon" row="1"/>
	</GridLayout>
	<StackLayout class="sidedrawer-content">
		<StackLayout orientation="horizontal" class="side-option" tap="goToProgress" id="progress-option" >
			<Image class="side-icon" src="res://ic_progress" id="progress" />
			<Label text="Progress" class="side-label" />
		</StackLayout>
		<StackLayout orientation="horizontal" class="side-option" tap="goToGoals" id="goals-option" >
			<Image class="side-icon" src="res://ic_goals" id="goals" />
			<Label text="Goals" class="side-label" />
		</StackLayout>
		<StackLayout orientation="horizontal" class="side-option" tap="goToNudges" id="nudges-option" >
			<Image class="side-icon" src="res://ic_nudges" id="nudges" />
			<Label text="Nudges" class="side-label" id='lined-option'/>
		</StackLayout>
		<StackLayout orientation="horizontal" class="side-option" tap="goToSettings" id="settings-option" >
			<Image class="side-icon" src="res://ic_settings" id="settings" />
			<Label text="Settings" class="side-label" />
		</StackLayout>
		<StackLayout orientation="horizontal" class="side-option" tap="goToFeedback" id="feedback-option" >
			<Image class="side-icon" src="res://ic_feedback" id="feedback" />
			<Label text="Feedback" class="side-label" />
		</StackLayout>
	</StackLayout>
</StackLayout>