<Page actionBarHidden="true" class="onboarding" loaded="pageLoaded" unloaded="pageUnloaded" navigatingTo="navigatingTo" 
  xmlns:Slides="nativescript-slides"  xmlns:VideoPlayer="nativescript-videoplayer">
  <StackLayout orientation='vertical'>
    <Slides:SlideContainer id="slides" pageIndicators="true" height="94%" disablePan="true">

      <Slides:Slide class="firstSlide" swipe="checkNameNextSlide">
        <StackLayout>
        <Image src="{{visuals[0]}}" id="icon" />
        <Label text="{{titles[0]}}" class='title' textWrap='true'  id="hi"/>
        <TextField hint="Enter your name" text="{{ name }}" autocorrect="false" autocapitalization="none" style="color:white" id="name" />
        <Label text="{{texts[0]}}" textWrap='true' id="welcome" />
      </StackLayout>
      </Slides:Slide>

      <Slides:Slide class="slide" swipe="goToNextSlide">
        <Label text="{{titles[1]}}" class='title' textWrap='true'/>
        <Image src="{{visuals[1]}}" />
        <Label text="{{texts[1]}}"  textWrap='true' />
      </Slides:Slide>

      <Slides:Slide class="slide" swipe="goToNextSlide">
        <Label text="{{titles[2]}}" class='title' textWrap='true'/>
        <Image src="{{visuals[2]}}" />
        <Label text="{{texts[2]}}" textWrap='true' />
      </Slides:Slide>

      <Slides:Slide class="slide" swipe="goToNextSlide">
        <Label text="{{titles[3]}}" class='title' textWrap='true'/>
        <Image src="{{visuals[3]}}" />
        <Label text="{{texts[3]}}" textWrap='true' />
      </Slides:Slide>

      <Slides:Slide id="slide-usage" class="slide"  swipe="getUsagePermission">
        <StackLayout>
          <Label text="{{texts[4]}}" textWrap='true' class="header"/>
          <VideoPlayer:Video id="firstVideo"
            controls="false" 
            loop="true" autoplay="true" height="400" 
            src="~/videos/UsageExample.mp4" />
        </StackLayout>
      </Slides:Slide>

      <Slides:Slide class="slide"  swipe="getDrawPermission">
        <StackLayout>
            <Label text="{{texts[5]}}" textWrap='true' class="header"/>
            <VideoPlayer:Video id="firstVideo"
                controls="false" 
                loop="true" autoplay="true" height="400" 
                src="~/videos/DrawOverExample.mp4" />
        </StackLayout>
      </Slides:Slide>

      <Slides:Slide id='lastslide' class="slide" swipe="goToNavView">
        <Label text="{{titles[4]}}" class='title' textWrap='true'/>
        <Image src="{{visuals[4]}}" class="squish" />
        <Label text="{{texts[6]}}" textWrap='true' />
      </Slides:Slide>

    </Slides:SlideContainer>
    <Label text='skip' tap='goToNavView' class='skip' />
  </StackLayout>

</Page>