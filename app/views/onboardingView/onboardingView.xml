<Page actionBarHidden="true" class="onboarding" loaded="pageLoaded" unloaded="pageUnloaded"
  xmlns:Slides="nativescript-slides">

  <Slides:SlideContainer id="slides" pageIndicators="true">

    <Slides:Slide class="slide">
      <Label text="{{texts[0]}}" class='title' textWrap='true' />
    </Slides:Slide>

    <Slides:Slide class="slide">
      <Label text="{{titles[1]}}" class='title' />
      <Image src="{{visuals[1]}}" />
      <Label text="{{texts[1]}}"  textWrap='true' />
    </Slides:Slide>

    <Slides:Slide class="slide">
      <Label text="{{titles[2]}}" class='title' />
      <Image src="{{visuals[2]}}" />
      <Label text="{{texts[2]}}" textWrap='true' />
    </Slides:Slide>

    <Slides:Slide class="slide">
      <Label text="{{titles[3]}}" class='title' />
      <Image src="{{visuals[3]}}" />
      <Label text="{{texts[3]}}" textWrap='true' />
    </Slides:Slide>

    <Slides:Slide id='lastslide' class="slide">
      <Label text="{{titles[4]}}" class='title' />
      <Image src="{{visuals[4]}}" class='padded' />
      <Label text="{{texts[4]}}" textWrap='true' />
    </Slides:Slide>
    
  </Slides:SlideContainer>

</Page>