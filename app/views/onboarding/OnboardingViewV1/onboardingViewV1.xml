<Page loaded="pageLoaded" unloaded="pageUnloaded" navigatingTo="navigatingTo" 
  actionBarHidden="true" 
  class="onboarding" 
  xmlns:Slides="nativescript-slides"  xmlns:VideoPlayer="nativescript-videoplayer">
  <StackLayout orientation='vertical'>
    <Slides:SlideContainer id="slides" pageIndicators="true" height="96%" disablePan="true">


      <Slides:Slide class="firstSlide" swipe="checkNameNextSlide">
        <StackLayout id="first">
        <Image src="{{visuals[0]}}" id="icon" />
        <Label text="{{titles[0]}}" class='title' textWrap='true' />
        <TextField hint="Enter your name" text="{{ name }}" autocorrect="false" autocapitalization="none" style="color:white" id="name" returnPress="checkNameNextSlide"/>
        <Label text="{{texts[0]}}" textWrap='true' id="welcome" />
      </StackLayout>
      </Slides:Slide>

      <Slides:Slide class="slide" swipe="goToNextSlide">
        <Label text="{{titles[1]}}" class='title' textWrap='true'/>
        <Image src="{{visuals[1]}}" />
        <Label text="{{texts[1]}}"  textWrap='true' />
      </Slides:Slide>

      <Slides:Slide class="slide" swipe="goToNextSlide">
        <Label text="{{titles[2]}}" class='title' textWrap='true'/>
        <Image src="{{visuals[2]}}" />
        <Label text="{{texts[2]}}" textWrap='true' />
      </Slides:Slide>

      <Slides:Slide class="slide" swipe="goToNextSlide">
        <Label text="{{titles[3]}}" class='title' textWrap='true'/>
        <Image src="{{visuals[3]}}" />
        <Label text="{{texts[3]}}" textWrap='true' />

      </Slides:Slide>

      <Slides:Slide id="slide-usage" class="slide"  swipe="checkAccessibilityPermission">
        <StackLayout>
          <Label text="{{texts[4]}}" textWrap='true' class="onboarding-label header"/>
          <!-- <VideoPlayer:Video class="firstVideo"
            controls="false" 
            loop="true" autoplay="true"
            src="~/videos/AccessibilityPermission.mp4" /> -->
          <Button text="Give Accessibility Permission" tap="giveAccessibilityPermission"/>
        </StackLayout>
      </Slides:Slide>

      <Slides:Slide class="slide" swipe="checkDrawPermission">
        <StackLayout>
            <Label text="{{texts[5]}}" textWrap='true' class="onboarding-label header"/>
            <!-- <VideoPlayer:Video class="firstVideo"
                controls="false" 
                loop="true" autoplay="true" 
                src="~/videos/OverlayPermission.mp4" /> -->
              <Button text="Give Overlay Permission" tap="giveDrawPermission"/>
        </StackLayout>
      </Slides:Slide>


      <Slides:Slide id='lastslide' class="slide" swipe="goToNextSlide">
        <Label text="{{titles[4]}}" class='title' textWrap='true'/>
        <Button text="Choose your Apps" onTap="goToAppsView"/>
      </Slides:Slide>

    </Slides:SlideContainer>
  </StackLayout>

</Page>