<Page loaded="pageLoaded" id="nudges"
  xmlns:sidedrawer="shared/sd" 
  xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:sd="nativescript-telerik-ui/sidedrawer">

  <ActionBar class="action-bar">
    <ActionBar.titleView>
      <Label text="Nudge Details" horizontalAlignment="center" class="action-bar-title" />
    </ActionBar.titleView>
    <NavigationButton tap="toggleDrawer" icon="res://ic_hamburger" />
  </ActionBar>

  <sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">
    <sd:RadSideDrawer.drawerContent>
      <sidedrawer:sd />
    </sd:RadSideDrawer.drawerContent>

    <sd:RadSideDrawer.mainContent horizontalAlignment="center">
      <StackLayout orientation="vertical" id="detail" class="main-container">
        <Label id="title" class="detail-label" />
        <Label id="description" class="detail-label" />
        <FlexboxLayout orientation="horizontal" class="level-layout">
          <Label text="Level: " class="detail-label" />
          <Label id="level" class="detail-label" />
        </FlexboxLayout>
        <Button id='button' text="Show Me a Demo" />
        <FlexboxLayout orientation="horizontal" class="disable-layout" id="disable-toggle">
          <Label id="disable-label" text="Disable All" class="detail-label small" />
          <Switch id="disable-switch" class="detail-label" />
        </FlexboxLayout>
        <ScrollView orientation="vertical">
          <StackLayout orientation="vertical" id="list" />
        </ScrollView>
      </StackLayout>
    </sd:RadSideDrawer.mainContent>
  </sd:RadSideDrawer>
</Page>