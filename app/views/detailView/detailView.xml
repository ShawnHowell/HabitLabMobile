<Page loaded="pageLoaded" id="nudges" unloaded="pageUnloaded"
  xmlns:sidedrawer="shared/sd" 
  xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:sd="nativescript-telerik-ui/sidedrawer">

  <ActionBar class="action-bar">
    <ActionBar.titleView>
      <Label text="Nudge Details" horizontalAlignment="center" class="action-bar-title" />
    </ActionBar.titleView>
    <NavigationButton tap="toggleDrawer" icon="res://ic_hamburger" />
  </ActionBar>

  <sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">
    <sd:RadSideDrawer.drawerContent>
      <sidedrawer:sd />
    </sd:RadSideDrawer.drawerContent>

    <sd:RadSideDrawer.mainContent horizontalAlignment="center">
      <StackLayout orientation="vertical" id="detail" class="main-container">
        <Label class="detail-label-title" text="{{info.name}}" />
        <Label class="detail-label-description" text="{{info.description}}" textWrap="true" />
        <FlexboxLayout orientation="horizontal" class="level-layout">
          <Label text="Level: " class="detail-label" />
          <Label className="{{'detail-label ' + info.level}}" text="{{info.levelLabel}}" />
        </FlexboxLayout>
        <Button class="try-me-button" text="Show Me a Demo" tap="onButtonTap"/>
        <FlexboxLayout orientation="horizontal" className="{{info.target === 'phone' ? 'level-layout' : 'disable-layout'}}">
          <Label text="{{info.enabled ? info.mainLabelDisable : info.mainLabelEnable}}" class="detail-label small" />
          <Switch class="detail-label" tap="onMainToggle" />
        </FlexboxLayout>

        <ListView id="app-list-view" items="{{apps}}" itemTap="onItemTap" separatorColor="#FFFFFF" class="padded-list">
          <ListView.itemTemplate>
            <GridLayout columns="auto,*,auto" rows="auto" class="app-list-item">
              <Image imageSource="{{icon}}" col="0" class="detail-icon" verticalAlignment="center" />
              <Label text="{{appName}}" col="1" class="detail-label-app" />
              <Switch col="2" />
            </GridLayout>
          </ListView.itemTemplate>
        </ListView>

      </StackLayout>
    </sd:RadSideDrawer.mainContent>
  </sd:RadSideDrawer>
</Page>