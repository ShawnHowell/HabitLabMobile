<Page loaded="pageLoaded" xmlns:sd="nativescript-telerik-ui/sidedrawer">
   <ActionBar title="HabitLab" class="action-bar">
    	<ActionItem tap="toggleDrawer" ios.systemIcon="4" android.systemIcon="ic_menu_btn_add" ios.position="left" />
	</ActionBar>
    <sd:RadSideDrawer id="sideDrawer" drawerLocation="Right" drawerTransition="PushTransition">
    	<sd:RadSideDrawer.drawerContent>
    		   <StackLayout class="sidedrawer-header">
                    <Label text="Menu" class="sidedrawer-header-brand" />
                </StackLayout>
                <StackLayout class="sidedrawer-content">
                    <Label text="Progress" class="sidedrawer-list-item-text" tap="goToProgress" />
                    <Label text="Goals" class="sidedrawer-list-item-text" tap="goToGoals" />
                    <Label text="Interventions" class="sidedrawer-list-item-text" tap="goToInterventions"  />
                    <Label text="Settings" class="sidedrawer-list-item-text" tap="goToSettings"  />
                </StackLayout>
        </sd:RadSideDrawer.drawerContent>
    </sd:RadSideDrawer>

</Page>