<Page loaded="pageLoaded"
  xmlns:sidedrawer="shared/sd" 
  xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:sd="nativescript-telerik-ui/sidedrawer" 
  xmlns:dd="nativescript-drop-down" 
  xmlns:chart="nativescript-telerik-ui/chart"
  xmlns:Slides="nativescript-slides"
  navigatingTo="navigatingTo">

	<ActionBar title="HabitLab" class="action-bar">
	   <NavigationButton tap="toggleDrawer" ios.systemIcon="4" android.systemIcon="ic_menu_moreoverflow" ios.position="left" />
	</ActionBar>

	



  <sd:RadSideDrawer id="sideDrawer" drawerContentSize="180" DrawerLength="400">
    <sd:RadSideDrawer.drawerContent>
      <sidedrawer:sd/>
    </sd:RadSideDrawer.drawerContent>
    

	    <sd:RadSideDrawer.mainContent horizontalAlignment="center">

			<TabView>
				 <TabView.items>

					<TabViewItem title="Day" xmlns:dayTab="progressTabs/dayTab" >
					   <TabViewItem.view>
					   		<dayTab:dayTab/>
						</TabViewItem.view>
					</TabViewItem>
				
					 <TabViewItem title="Week" xmlns:weekTab="progressTabs/weekTab">
						 <TabViewItem.view>
							 <weekTab:weekTab/>
						  </TabViewItem.view>
					  </TabViewItem>
								     
					<TabViewItem title="Month" xmlns:monthTab="progressTabs/monthTab">
						 <TabViewItem.view>
						     <monthTab:monthTab/>
				       </TabViewItem.view>

					 </TabViewItem>
				   </TabView.items>
				</TabView>

	    	
	            
	     </sd:RadSideDrawer.mainContent>


  </sd:RadSideDrawer>

</Page>