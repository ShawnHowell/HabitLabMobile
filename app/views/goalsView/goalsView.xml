<Page loaded="pageLoaded"
  xmlns:sidedrawer="shared/sd"
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:sd="nativescript-telerik-ui/sidedrawer"
  xmlns:accordion="nativescript-accordion">

  <ActionBar title="HabitLab" class="action-bar">
   	<NavigationButton tap="toggleDrawer" ios.systemIcon="4" android.systemIcon="ic_menu_moreoverflow" ios.position="left" />
	</ActionBar>

  <sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">

    <sd:RadSideDrawer.drawerContent>
			<sidedrawer:sd/>
    </sd:RadSideDrawer.drawerContent>

    <sd:RadSideDrawer.mainContent horizontalAlignment="center">
      <StackLayout orientation='vertical'>

        <Label text="Phone Goals" class="section-title" />
        <StackLayout orientation="vertical" id="phoneGoals" />

        <Label text="App Goals" class="section-title" />
        <ScrollView orientation="vertical" class="goal-scroll">
          <StackLayout orientation="vertical" id="appGoals" />
        </ScrollView>

        <Button text="manage apps" tap="onManageApps" />

      </StackLayout>
    </sd:RadSideDrawer.mainContent>

  </sd:RadSideDrawer>

</Page>