<Page loaded="pageLoaded" id="settings" unloaded="pageUnloaded"
  xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:sd="nativescript-telerik-ui/sidedrawer" 
  xmlns:sidedrawer="shared/sd">

  <ActionBar class="action-bar">
    <ActionBar.titleView>
      <Label text="Settings" horizontalAlignment="center" class="action-bar-title" />
    </ActionBar.titleView>
    <NavigationButton tap="toggleDrawer" icon="res://ic_hamburger" />
    <ActionItem tap="onInfo" icon="res://ic_about" />
  </ActionBar>

  <sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">

    <sd:RadSideDrawer.drawerContent>
				<sidedrawer:sd/>
    </sd:RadSideDrawer.drawerContent>

    <sd:RadSideDrawer.mainContent>
      <StackLayout class="main-container" id="main-layout">
        <GridLayout columns="auto,*,auto" rows="auto, auto" class="settings-grid" tap="editName">
          <Image class="settings-button-img" src="res://ic_account" id="edit-name" rowSpan="2" verticalAlignment="center"/>
          <Label text="Edit Name" col="1" class="settings-label" />
          <Label text="Set your preferred name" col="1" row="1" class="settings-sub-label"/>
        </GridLayout>
        <GridLayout columns="auto,*,auto" rows="auto, auto" class="settings-grid" tap="setHours">
          <Image class="settings-button-img" src="res://ic_alarm" id="set-hours" rowSpan="2" verticalAlignment="center"/>
          <Label text="Active Hours" col="1" class="settings-label" />
          <Label text="Set when HabitLab can nudge you" col="1" row="1" class="settings-sub-label"/>
          <Image class="settings-button-icon" src="res://ic_arrow_right" col="2" rowSpan="2" verticalAlignment="center"/>
        </GridLayout>
        <GridLayout columns="auto,*,auto" rows="auto, auto" class="settings-grid" tap="goToFeedback" >
          <Image class="settings-button-img" src="res://ic_feedback" id="faq" rowSpan="2" verticalAlignment="center"/>
          <Label text="Feedback" col="1" class="settings-label" />
          <Label text="Tell us what you think about HabitLab" col="1" row="1" class="settings-sub-label"/>
          <Image class="settings-button-icon" src="res://ic_arrow_right" col="2" rowSpan="2" verticalAlignment="center"/>
        </GridLayout>
        <GridLayout columns="auto,*,auto" rows="auto, auto" class="settings-grid" tap="goToFAQ" >
          <Image class="settings-button-img" src="res://ic_faq" id="faq" rowSpan="2" verticalAlignment="center"/>
          <Label text="FAQ" col="1" class="settings-label" />
          <Image class="settings-button-icon" src="res://ic_arrow_right" col="2"/>
        </GridLayout>
        <GridLayout columns="auto,*,auto" rows="auto" class="settings-grid" tap="eraseData" >
          <Image class="settings-button-img" src="res://ic_trash" id="erase-data" rowSpan="2" verticalAlignment="center"/>
          <Label text="Erase Data" col="1" class="settings-label" />
        </GridLayout>

       <!--  <Button text="Set fake data" onTap="setFakeData" />
        <Button text="Start Accessibility Service" onTap="startAccessibilityService" /> -->
      </StackLayout>
    </sd:RadSideDrawer.mainContent>

  </sd:RadSideDrawer>

</Page>