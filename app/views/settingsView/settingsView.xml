<Page loaded="pageLoaded" 
  xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:sd="nativescript-telerik-ui/sidedrawer" 
  xmlns:sidedrawer="shared/sd">

  <ActionBar class="action-bar">
    <ActionBar.titleView>
      <Label text="Settings" horizontalAlignment="center" class="action-bar-title" />
    </ActionBar.titleView>
    <NavigationButton tap="toggleDrawer" icon="res://ic_hamburger" />
  </ActionBar>

  <sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">

    <sd:RadSideDrawer.drawerContent>
				<sidedrawer:sd/>
    </sd:RadSideDrawer.drawerContent>

    <sd:RadSideDrawer.mainContent>
      <GridLayout class="settings-grid" rows="auto,auto" columns="auto,auto">
        <AbsoluteLayout class="settings-button-layout" row="0" col="0" >
          <Button class="settings-button" id="edit-name" tap="editName" />
          <StackLayout class="settings-button-icon">
            <Image background-color="#FFA730" class="settings-button-img" src="res://ic_account"/>
            <Label text="Edit Name"/>
          </StackLayout>
        </AbsoluteLayout>
        <AbsoluteLayout class="settings-button-layout" row="0" col="1" >
          <Button class="settings-button" id="set-hours" tap="setHours" />
          <StackLayout class="settings-button-icon">
            <Image class="settings-button-img" src="res://ic_alarm"/>
            <Label text="Hours Active"/>
          </StackLayout>
        </AbsoluteLayout>
        <AbsoluteLayout class="settings-button-layout" row="1" col="0" >
          <Button class="settings-button" id="erase-data" tap="eraseData" />
          <StackLayout class="settings-button-icon">
            <Image class="settings-button-img" src="res://ic_trash"/>
            <Label text="Erase Data"/>
          </StackLayout>
        </AbsoluteLayout>
        <AbsoluteLayout class="settings-button-layout" row="1" col="1" >
          <Button class="settings-button" id="faq" tap="goToFAQ" />
          <StackLayout class="settings-button-icon">
            <Image class="settings-button-img" src="res://ic_faq"/>
            <Label text="FAQ"/>
          </StackLayout>
        </AbsoluteLayout>
      </GridLayout>
    </sd:RadSideDrawer.mainContent>

  </sd:RadSideDrawer>

</Page>