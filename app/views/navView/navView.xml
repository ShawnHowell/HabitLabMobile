<Page loaded="pageLoaded"
  xmlns:sidedrawer="shared/sd"
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:sd="nativescript-telerik-ui/sidedrawer">

  <ActionBar title="HabitLab" class="action-bar" >
    <NavigationButton tap="toggleDrawer" ios.systemIcon="4" android.systemIcon="ic_menu_moreoverflow" android.position="left"/>
  </ActionBar>

  <sd:RadSideDrawer id="sideDrawer" drawerContentSize="180">
    <sd:RadSideDrawer.drawerContent>
      <sidedrawer:sd/>
    </sd:RadSideDrawer.drawerContent>

    <sd:RadSideDrawer.mainContent>
      <StackLayout orientation="vertical">
        <Button text="Progress" tap="goToProgress" class="button-progress" />
        <Button text="Goals" tap="goToGoals" class="button-goals" />
        <Button text="Interventions" tap="goToInterventions" class="button-interventions" />
        <Button text="Settings" tap="goToSettings" class="button-settings" />
      </StackLayout>
    </sd:RadSideDrawer.mainContent>

  </sd:RadSideDrawer>

</Page>