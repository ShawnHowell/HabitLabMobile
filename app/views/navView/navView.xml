<Page loaded="pageLoaded"
  xmlns:sidedrawer="shared/sd" 
  xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:sd="nativescript-telerik-ui/sidedrawer">

  <ActionBar title="HabitLab" class="action-bar" >
    <NavigationButton tap="toggleDrawer" icon="res://ic_hamburger" />
  </ActionBar>

  <sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">
    <sd:RadSideDrawer.drawerContent>
      <sidedrawer:sd/>
    </sd:RadSideDrawer.drawerContent>

    <sd:RadSideDrawer.mainContent>
      <StackLayout orientation="vertical">
        <Button text="Progress" tap="goToProgress" class="nav-button button-progress" />
        <Button text="Goals" tap="goToGoals" class="nav-button button-goals" />
        <Button text="Interventions" tap="goToInterventions" class="nav-button button-interventions" />
        <Button text="Settings" tap="goToSettings" class="nav-button button-settings" />
      </StackLayout>
    </sd:RadSideDrawer.mainContent>

  </sd:RadSideDrawer>

</Page>