<Page loaded="pageLoaded" id="nudges" unloaded="pageUnloaded"
  xmlns:sidedrawer="shared/sd" 
  xmlns="http://schemas.nativescript.org/tns.xsd" 
  xmlns:sd="nativescript-telerik-ui/sidedrawer">

  <ActionBar class="action-bar">
    <ActionBar.titleView>
      <Label text="Nudges" horizontalAlignment="center" class="action-bar-title" />
    </ActionBar.titleView>
    <NavigationButton tap="toggleDrawer" icon="res://ic_hamburger" />
    <ActionItem id="search-icon" tap="onShowSearch" icon="res://ic_search" tap="onShowSearch"/>
  </ActionBar>

  <sd:RadSideDrawer id="sideDrawer" showOverNavigation="true">
    <sd:RadSideDrawer.drawerContent>
	    <sidedrawer:sd />
    </sd:RadSideDrawer.drawerContent>

   	<sd:RadSideDrawer.mainContent horizontalAlignment="center" >
      <StackLayout>
        <SearchBar hint="Search..." submit="onSearch" clear="onClearSearch" id="search-bar" visibility="collapse"/>
        <ScrollView orientation="vertical" id="nudge-scroll">
          <StackLayout>
            <Label class="nudges-section-title" text="Hint Bubbles" id="toast-label" />
         		<StackLayout orientation="vertical" id="toast-interventions" unloaded="layoutUnloaded" />
            <Label class="nudges-section-title" text="Notifications" id="notification-label" />
            <StackLayout orientation="vertical" id="notification-interventions" unloaded="layoutUnloaded" />
            <Label class="nudges-section-title" text="Alerts" id="dialog-label" />
            <StackLayout orientation="vertical" id="dialog-interventions" unloaded="layoutUnloaded" />
            <Label class="nudges-section-title" text="Other" id="overlay-label" />
            <StackLayout orientation="vertical" id="overlay-interventions" unloaded="layoutUnloaded" />
          </StackLayout>
        </ScrollView>
        <Button id="finish" tap="goToProgress" text="finish tutorial" class="finish-tutorial-btn" />
      </StackLayout>
    </sd:RadSideDrawer.mainContent>
  </sd:RadSideDrawer>
</Page>